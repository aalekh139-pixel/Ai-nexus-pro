    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({ duration: 1200, once: false });

        const cursor = document.getElementById('cursor');
        const follower = document.getElementById('follower');

        document.addEventListener('mousemove', (e) => {
            const x = e.clientX;
            const y = e.clientY;
            
            cursor.style.left = x + 'px';
            cursor.style.top = y + 'px';
            
            // Follower has a slight delay
            follower.style.left = (x - 16) + 'px';
            follower.style.top = (y - 16) + 'px';
        });

        document.addEventListener('mousedown', () => {
            follower.style.transform = 'scale(0.8)';
            cursor.style.transform = 'scale(1.5)';
        });
        document.addEventListener('mouseup', () => {
            follower.style.transform = 'scale(1)';
            cursor.style.transform = 'scale(1)';
        });

        const links = document.querySelectorAll('a, button, .glass-card');
        links.forEach(link => {
            link.addEventListener('mouseenter', () => {
                follower.style.transform = 'scale(1.5)';
                follower.style.borderColor = 'rgba(255,255,255,0.8)';
                cursor.style.opacity = '0';
            });
            link.addEventListener('mouseleave', () => {
                follower.style.transform = 'scale(1)';
                follower.style.borderColor = 'rgba(255,255,255,0.2)';
                cursor.style.opacity = '1';
            });
        });
    </script>
